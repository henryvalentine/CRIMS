@model Crims.Data.Models.Project
@{
    ViewBag.Title = "Delete Project";
    Layout = null;
}
<div class="box box-info col-md-10">
    <div class="box-header with-border">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Delete Project Site</h4>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    @using (Html.BeginForm())
    {       
        @Html.AntiForgeryToken()
    <div class="box-body">
        <div class="callout callout-danger">
            <h4>Are you sure you want to delete this project site??</h4>
            <p>Project Code: @Html.DisplayFor(model => model.ProjectCode) </p>
            <p>@Html.DisplayFor(model => model.ProjectName) </p>
            <p>@Html.DisplayFor(model => model.ProjectDescription)</p>
        </div>
        <!-- /.box-body -->
    </div>
        <div class="box-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-danger pull-right">Delete</button>
        </div>
            <!-- /.box-footer -->
    }
</div>